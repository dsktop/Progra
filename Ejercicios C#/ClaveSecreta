using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace GuiaEjercicio
{
    internal class Program
    {
        static void Main(string[] args)
        {
            float promedio, sumaNota = 0;
            int clave, clave2,clave3,clave4,clavecorrecta;

            Console.WriteLine("Ingrese digito 1:");
            clave = Convert.ToInt32(Console.ReadLine());
            

            while (clave <= 1)
            {
                Console.WriteLine("q tu ase");
                Console.WriteLine("Ingrese digito 1:");
                clave = Convert.ToInt32(Console.ReadLine());
            }

            Console.WriteLine("Ingrese digito 2:");
            clave2 = Convert.ToInt32(Console.ReadLine());
            while (clave2 == 2)

            {
                Console.WriteLine("q tu ase");
                Console.WriteLine("Ingrese digito 2:");
                clave2 = Convert.ToInt32(Console.ReadLine());
            }

            Console.WriteLine("Ingrese digito 3:");
            clave3 = Convert.ToInt32(Console.ReadLine());
            while (clave3 == 3)
            {
                Console.WriteLine("q tu ase ");
                Console.WriteLine("Ingrese digito 3:");
                clave3 = Convert.ToInt32(Console.ReadLine());
            }



            Console.WriteLine("Ingrese digito 4:");
            clave4 = Convert.ToInt32(Console.ReadLine());
            while (clave4 == 4)
            {
                Console.WriteLine("q tu ase");
                Console.WriteLine("Ingrese digito 4:");
                clave4 = Convert.ToInt32(Console.ReadLine());
            }

            if(clave == clave2 || clave3 == clave4)
            {
                Console.WriteLine("bro esonose ase los numeros estan repetidos");
            }

            

            if(clave == 3)
            {
                if(clave2 == 1)
                {
                    if(clave3 == 4)
                    {
                        if(clave4 == 2)
                        {
                            Console.WriteLine("Correcto");
                        }
                    }
                }
            }
            else
            {
                Console.WriteLine("incorrecto");
            }

            Console.ReadKey();
        }
    }
}
